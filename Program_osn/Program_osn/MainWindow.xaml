<Window x:Class="ImageEnhancementWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageUP — улучшение качества изображений"
        Height="650" Width="1100"
        Background="#FF101018"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ ЧАСТЬ: исходное + обработанное изображения -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Исходное изображение -->
            <GroupBox Header="Исходное изображение"
                      Foreground="White"
                      Margin="0,0,0,5"
                      FontWeight="SemiBold">
                <Border Background="#FF1B1B27"
                        Padding="5"
                        CornerRadius="10"
                        ClipToBounds="True">
                    <Grid>
                        <Image x:Name="OriginalImageControl"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5"
                               MouseLeftButtonDown="OriginalImageControl_MouseLeftButtonDown">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="OriginalImageScale"
                                                ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </Border>
            </GroupBox>

            <!-- Обработанное изображение -->
            <GroupBox Header="Обработанное изображение"
                      Foreground="White"
                      Grid.Row="1"
                      FontWeight="SemiBold">
                <Border Background="#FF1B1B27"
                        Padding="5"
                        CornerRadius="10"
                        ClipToBounds="True">
                    <Grid>
                        <Image x:Name="ProcessedImageControl"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5"
                               MouseLeftButtonDown="ProcessedImageControl_MouseLeftButtonDown">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="ProcessedImageScale"
                                                ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </Border>
            </GroupBox>
        </Grid>

        <!-- ПРАВАЯ ЧАСТЬ: панель управления -->
        <Border Grid.Column="1"
                Background="#FF181821"
                CornerRadius="15"
                Padding="15">
            <StackPanel>

                <TextBlock Text="Панель управления"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <!-- Кнопки загрузки / сохранения -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <Button Content="Загрузить"
                            Width="120"
                            Margin="0,0,8,0"
                            Click="LoadImage_Click"
                            Background="#FF00E5FF"
                            Foreground="#FF1A1A1A"
                            FontWeight="SemiBold"/>
                    <Button Content="Сохранить"
                            Width="120"
                            Click="SaveImage_Click"
                            Background="#FF303040"
                            Foreground="White"/>
                </StackPanel>

                <Separator Margin="0,5"/>

                <!-- Методы улучшения -->
                <TextBlock Text="Методы улучшения"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,5"/>

                <Button Content="Линейное контрастирование"
                        Margin="0,3"
                        Height="30"
                        Click="LinearContrast_Click"
                        Background="#FF252535"
                        Foreground="White"/>

                <Button Content="Эквализация гистограммы"
                        Margin="0,3"
                        Height="30"
                        Click="HistogramEq_Click"
                        Background="#FF252535"
                        Foreground="White"/>

                <Button Content="Медианный фильтр (3x3)"
                        Margin="0,3"
                        Height="30"
                        Click="MedianFilter_Click"
                        Background="#FF252535"
                        Foreground="White"/>

                <!-- Параметры фильтра Винера -->
                <TextBlock Text="Фильтр Винера"
                           Foreground="White"
                           Margin="0,10,0,2"
                           FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Радиус окна:"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <Slider x:Name="WienerRadiusSlider"
                            Minimum="1"
                            Maximum="3"
                            Value="1"
                            Width="80"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding ElementName=WienerRadiusSlider, Path=Value}"
                               Foreground="White"
                               Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0,5,0,0">
                    <TextBlock Text="Дисперсия шума:"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox x:Name="NoiseVarianceTextBox"
                             Width="60"
                             Text="10"
                             Background="#FF101018"
                             Foreground="White"
                             BorderBrush="#FF404050"/>
                </StackPanel>

                <Button Content="Применить фильтр Винера"
                        Margin="0,5,0,10"
                        Height="30"
                        Click="WienerFilter_Click"
                        Background="#FF3C3C5A"
                        Foreground="White"/>

                <Separator Margin="0,5"/>

                <!-- SSIM -->
                <TextBlock Text="Оценка качества (SSIM)"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,5"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,5">
                    <TextBlock Text="SSIM:"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock x:Name="SsimValueTextBlock"
                               Foreground="#FF7CFC00"
                               FontWeight="Bold"
                               Text="—"/>
                </StackPanel>

                <TextBlock Text="SSIM рассчитывается между исходным и текущим обработанным изображением."
                           Foreground="#FF9A9AAA"
                           TextWrapping="Wrap"
                           FontSize="11"
                           Margin="0,10,0,0"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
