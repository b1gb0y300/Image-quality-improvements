<Window x:Class="ImageEnhancementWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Улучшение качества изображений"
        Height="600" Width="1000"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ ЧАСТЬ: исходное и обработанное изображения -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Исходное изображение -->
            <GroupBox Header="Исходное изображение"
                      Foreground="White"
                      Margin="0,0,0,5">
                <Border Background="#FF2A2A2A" Padding="5">
                    <ScrollViewer x:Name="OriginalScrollViewer">
                        <Image x:Name="OriginalImageControl"
                               Stretch="Uniform"
                               RenderTransformOrigin="0.5,0.5"
                               MouseLeftButtonDown="OriginalImageControl_MouseLeftButtonDown">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="OriginalImageScale"
                                                ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </ScrollViewer>
                </Border>
            </GroupBox>

            <!-- Обработанное изображение -->
            <GroupBox Header="Обработанное изображение"
                      Foreground="White"
                      Grid.Row="1">
                <Border Background="#FF2A2A2A" Padding="5">
                    <ScrollViewer x:Name="ProcessedScrollViewer">
                        <Image x:Name="ProcessedImageControl"
                               Stretch="Uniform"
                               RenderTransformOrigin="0.5,0.5"
                               MouseLeftButtonDown="ProcessedImageControl_MouseLeftButtonDown">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="ProcessedImageScale"
                                                ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </ScrollViewer>
                </Border>
            </GroupBox>
        </Grid>

        <!-- ПРАВАЯ ЧАСТЬ: панель управления -->
        <Border Grid.Column="1"
                Background="#FF262626"
                CornerRadius="8"
                Padding="10">
            <StackPanel>

                <TextBlock Text="Управление"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <!-- Кнопки загрузки / сохранения -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <Button Content="Загрузить изображение"
                            Width="170"
                            Margin="0,0,5,0"
                            Click="LoadImage_Click"/>
                    <Button Content="Сохранить результат"
                            Width="150"
                            Click="SaveImage_Click"/>
                </StackPanel>

                <Separator Margin="0,5"/>

                <!-- Методы улучшения -->
                <TextBlock Text="Методы улучшения"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,5"/>

                <Button Content="Линейное контрастирование"
                        Margin="0,3"
                        Height="30"
                        Click="LinearContrast_Click"/>

                <Button Content="Эквализация гистограммы"
                        Margin="0,3"
                        Height="30"
                        Click="HistogramEq_Click"/>

                <Button Content="Медианный фильтр (3x3)"
                        Margin="0,3"
                        Height="30"
                        Click="MedianFilter_Click"/>

                <!-- Параметры фильтра Винера -->
                <TextBlock Text="Фильтр Винера"
                           Foreground="White"
                           Margin="0,10,0,2"/>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Радиус окна:"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <Slider x:Name="WienerRadiusSlider"
                            Minimum="1"
                            Maximum="3"
                            Value="1"
                            Width="80"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding ElementName=WienerRadiusSlider, Path=Value}"
                               Foreground="White"
                               Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0,5,0,0">
                    <TextBlock Text="Дисперсия шума:"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox x:Name="NoiseVarianceTextBox"
                             Width="60"
                             Text="10"/>
                </StackPanel>

                <Button Content="Применить фильтр Винера"
                        Margin="0,5,0,10"
                        Height="30"
                        Click="WienerFilter_Click"/>

                <Separator Margin="0,5"/>

                <!-- SSIM -->
                <TextBlock Text="Оценка качества (SSIM)"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,5"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,5">
                    <TextBlock Text="SSIM:"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock x:Name="SsimValueTextBlock"
                               Foreground="#FF7CFC00"
                               FontWeight="Bold"
                               Text="—"/>
                </StackPanel>

                <TextBlock Text="SSIM рассчитывается между исходным и текущим обработанным изображением."
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           FontSize="11"
                           Margin="0,10,0,0"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
