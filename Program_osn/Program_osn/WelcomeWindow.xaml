<Window x:Class="ImageEnhancementWpf.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Улучшение качества изображений"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid>
        <!-- Градиентный фон -->
        <Border CornerRadius="20" Margin="10" Padding="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF1F3B4D" Offset="0"/>
                    <GradientStop Color="#FF29323C" Offset="0.5"/>
                    <GradientStop Color="#FF4E4376" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Полупрозрачная карточка контента -->
        <Border CornerRadius="20" Margin="10" Padding="25"
                Background="#CC141414">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <TextBlock Text="ImageUP"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#FF00E5FF"
                               Margin="0,0,10,0"/>
                    
                </StackPanel>

                <!-- Основной текст -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <TextBlock Text="Разработка основных модулей приложения"
                               FontSize="22"
                               Foreground="White"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="для улучшения качества изображения"
                               FontSize="22"
                               Foreground="White"
                               TextWrapping="Wrap"/>

                    <TextBlock Text="Программа реализует поэлементные преобразования (линейное контрастирование, эквализация гистограммы), медианную фильтрацию, фильтр Винера и метрику SSIM для оценки качества."
                               FontSize="14"
                               Foreground="#FFB0B0B0"
                               TextWrapping="Wrap"
                               Margin="0,20,0,0"/>

                    <TextBlock Text="Нажмите «Начать», чтобы перейти к рабочему окну обработки изображений."
                               FontSize="13"
                               Foreground="#FFB0B0B0"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Низ: подписи + кнопка Начать -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Center">
                        <TextBlock Text="Выполнил: студент Ковалев Н.С."
                                   Foreground="#FF8A8A8A"
                                   FontSize="12"/>
                        <TextBlock Text="Руководитель: Хохлова С.С."
                                   Foreground="#FF8A8A8A"
                                   FontSize="12"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="Начать"
                            Width="120" Height="36"
                            FontWeight="SemiBold"
                            Background="#FF00E5FF"
                            Foreground="#FF1A1A1A"
                            BorderBrush="#FF00E5FF"
                            Cursor="Hand"
                            Click="StartButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="Black"
                                              BlurRadius="10"
                                              ShadowDepth="2"
                                              Opacity="0.5"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
