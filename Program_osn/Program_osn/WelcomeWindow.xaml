<Window x:Class="ImageEnhancementWpf.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Улучшение качества изображений"
        Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Курсовая работа"
                       Foreground="White"
                       FontSize="24"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Разработка основных модулей приложения для улучшения качества изображения"
                       Foreground="White"
                       FontSize="18"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,10,0,0"/>
            <TextBlock Text="Программа реализует линейное контрастирование, 
эквализацию гистограммы, медианную фильтрацию, фильтр Винера и метрику SSIM."
                       Foreground="Gray"
                       FontSize="14"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>

        <Button Grid.Row="1"
                Content="Начать работу"
                Width="180" Height="40"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Click="StartButton_Click"/>
    </Grid>
</Window>
